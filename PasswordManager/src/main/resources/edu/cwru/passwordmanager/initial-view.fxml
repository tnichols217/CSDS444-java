<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.cwru.passwordmanager.InitialController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="20.0">
        <Label fx:id="passwordLabel">Enter password to unlock passwords: </Label>
        <PasswordField fx:id="passwordField"/>
    </HBox>
    <Button text="Open Passwords" onAction="#passwordButtonClicked"/>
    <Label styleClass="warning" visible="false" fx:id="error">Error: Incorrect Password</Label>
</VBox>
